<view class="tab-control">
  <block wx:for="{{title}}" wx:key="index">
    <view class="tab-item {{currentIndex===index ? 'active' :''}}" bindtap="handlecurrent" data-index="{{index}}">
      <text>{{item}}</text>
    </view>
  </block>
</view>